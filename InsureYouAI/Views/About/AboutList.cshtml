@model List<About>

@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    bool hasAboutContent = Model != null && Model.Any();
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">

        <!-- Header -->
        <div class="d-flex align-items-center mb-3">
            <h4 class="fw-bold mb-0 text-primary">
                <i class="bi bi-info-circle"></i> Hakkımızda İçerikleri
            </h4>

            <!-- Search -->
            <form class="ms-auto position-relative" style="max-width:260px;">
                <div class="position-absolute top-50 translate-middle-y px-3">
                    <i class="bi bi-search text-secondary"></i>
                </div>
                <input class="form-control ps-5 rounded-pill shadow-sm"
                       type="text"
                       placeholder="İçerik ara...">
            </form>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="text-muted">Başlık</th>
                        <th class="text-muted" style="width:60%">Açıklama</th>
                        <th class="text-center text-muted">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row-hover">

                            <!-- Title -->
                            <td class="fw-semibold text-dark">
                                <i class="bi bi-file-text text-primary me-1"></i>
                                @item.Title
                            </td>

                            <!-- Description -->
                            <td class="text-muted small" style="white-space: normal;">
                                @item.Description
                            </td>

                            <!-- Actions -->
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2 flex-wrap">

                                    <a href="/Default/Index/"
                                       target="_blank"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-eye-fill me-1"></i> Sitede Gör
                                    </a>

                                    <a href="/About/UpdateAbout/@item.AboutId"
                                       class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-pencil-square me-1"></i> Düzenle
                                    </a>

                                    <a href="/About/DeleteAbout/@item.AboutId"
                                       class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-trash-fill me-1"></i> Sil
                                    </a>

                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- CTA + Bilgilendirme -->
        <div class="mt-4">

            @if (!hasAboutContent)
            {
                <!-- Aktif -->
                <a href="/About/CreateAbout/"
                   class="btn btn-lg btn-primary rounded-pill shadow px-4">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Hakkımızda Yazısı Ekle
                </a>
            }
            else
            {
                <!-- Pasif -->
                <button class="btn btn-lg btn-secondary rounded-pill px-4" disabled>
                    <i class="bi bi-lock-fill me-1"></i> Yeni Hakkımızda Yazısı Ekle
                </button>

                <!-- Info -->
                <div class="alert alert-info mt-3 d-flex align-items-center" role="alert">
                    <i class="bi bi-info-circle-fill me-2 fs-5"></i>
                    <div>
                        <strong>Bilgilendirme:</strong><br />
                        Hakkımızda sayfası için yalnızca <b>1 adet içerik</b> tanımlanabilir.
                        Mevcut içeriği <b>Düzenle</b> butonu ile güncelleyebilirsiniz.
                    </div>
                </div>
            }

        </div>

    </div>
</div>

<style>
    .table-row-hover:hover {
        background-color: #f8f9fa;
        transition: .2s;
    }
</style>