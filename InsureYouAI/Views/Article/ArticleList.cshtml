@model List<Article>

@{
    ViewData["Title"] = "ArticleList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

@functions {
    string GetCategoryBadgeClass(string categoryName)
    {
        return categoryName switch
        {
            "Sağlık Sigortası" => "bg-success-subtle text-success",
            "Tamamlayıcı Sağlık Sigortası" => "bg-success-subtle text-success",
            "Trafik Sigortası" => "bg-warning-subtle text-warning",
            "Trafik Kaskosu" => "bg-warning-subtle text-warning",
            "Konut Sigortası" => "bg-primary-subtle text-primary",
            "DASK (Zorunlu Deprem Sigortası)" => "bg-danger-subtle text-danger",
            "Yurt Dışı Seyahat Sigortası" => "bg-info-subtle text-info",
            "Hayat Sigortası" => "bg-dark-subtle text-dark",
            "Eğitim Sigortası" => "bg-secondary-subtle text-secondary",
            _ => "bg-light text-dark"
        };
    }
}

<div class="card shadow-sm border-0 rounded-4">
    <div class="card-body">

        <!-- Header -->
        <div class="d-flex align-items-center mb-3">
            <h4 class="fw-bold mb-0 text-primary">
                <i class="bi bi-journal-text"></i> Makaleler
            </h4>

            <!-- Search -->
            <form class="ms-auto position-relative" style="max-width:260px;">
                <div class="position-absolute top-50 translate-middle-y px-3">
                    <i class="bi bi-search text-secondary"></i>
                </div>
                <input class="form-control ps-5 rounded-pill shadow-sm"
                       type="text"
                       placeholder="Makale ara...">
            </form>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light border-bottom">
                    <tr>
                        <th class="text-muted">#</th>
                        <th class="text-muted">Başlık</th>
                        <th class="text-muted">Kategori</th>
                        <th class="text-muted">Yazar</th>
                        <th class="text-muted">Tarih</th>
                        <th class="text-center text-muted">İşlemler</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr class="table-row-hover">

                            <!-- Index -->
                            <td>
                                <span class="badge bg-secondary bg-opacity-75">@count</span>
                            </td>

                            <!-- Title -->
                            <td class="fw-semibold text-dark">
                                <i class="bi bi-file-earmark-text text-primary me-1"></i>
                                @item.Title
                            </td>

                            <!-- Category -->
                            <td>
                                <span class="badge rounded-pill px-3 py-2
                                    @GetCategoryBadgeClass(item.Category.CategoryName)">
                                    <i class="bi bi-tags me-1"></i>
                                    @item.Category.CategoryName
                                </span>
                            </td>

                            <!-- Author -->
                            <td class="text-dark">
                                <i class="bi bi-person-circle me-1 text-secondary"></i>
                                @item.AppUser.Name @item.AppUser.Surname
                            </td>

                            <!-- Date -->
                            <td class="text-muted small">
                                <i class="bi bi-calendar-event me-1"></i>
                                @item.CreatedDate.ToString("dd MMM yyyy")
                            </td>

                            <!-- Actions -->
                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2 flex-wrap">

                                    <a href="/Blog/BlogDetail/@item.ArticleId"
                                       target="_blank"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-eye-fill me-1"></i> Gör
                                    </a>

                                    <a href="/Article/UpdateArticle/@item.ArticleId"
                                       class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-pencil-square me-1"></i> Düzenle
                                    </a>

                                    <a href="/Article/DeleteArticle/@item.ArticleId"
                                       class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm">
                                        <i class="bi bi-trash-fill me-1"></i> Sil
                                    </a>

                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- CTA -->
        <div class="mt-4 d-flex gap-2 flex-wrap">
            <a href="/Article/CreateArticle/"
               class="btn btn-lg btn-primary rounded-pill shadow px-4">
                <i class="bi bi-plus-circle me-1"></i> Yeni Makale
            </a>

            <a href="/Article/CreateArticleWithOpenAI/"
               class="btn btn-lg btn-outline-info rounded-pill shadow px-4">
                <i class="bi bi-robot me-1"></i> Yapay Zeka ile Makale Oluştur
            </a>
        </div>

    </div>
</div>

<style>
    .table-row-hover:hover {
        background-color: #f8f9fa;
        transition: .2s;
    }
</style>