@model CreateUserRegisterDto
@{
    Layout = null;
}

<!doctype html>
<html lang="en" class="semi-dark">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/snacked/ltr/assets/images/favicon-32x32.png" type="image/png" />
    <!-- Bootstrap CSS -->
    <link href="/snacked/ltr/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/snacked/ltr/assets/css/bootstrap-extended.css" rel="stylesheet" />
    <link href="/snacked/ltr/assets/css/style.css" rel="stylesheet" />
    <link href="/snacked/ltr/assets/css/icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
@*     <link rel="/snacked/ltr/stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
 *@    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- loader-->
    <link href="/snacked/ltr/assets/css/pace.min.css" rel="stylesheet" />

    <title>Insure You AI Kullanıcı Oluşturma</title>
</head>

<body class="bg-register">

    <!--start wrapper-->
    <div class="wrapper">

        <!--start content-->
        <main class="authentication-content mt-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 col-lg-4 mx-auto">
                        <div class="card shadow rounded-5 overflow-hidden">
                            <div class="card-body p-4 p-sm-5">
                                <h5 class="card-title">Yeni Kullanıcı Kaydı</h5>
                                <form class="form-body" method="post">
                                    
                                 
                                    <div class="row g-3">
                                        <div class="col-12 ">
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                                                <input type="text" asp-for="Name" class="form-control radius-30 ps-5" id="inputName" placeholder="Adınız">
                                            </div>
                                        </div>

                                        <div class="col-12 ">
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                                                <input type="text" asp-for="Surname" class="form-control radius-30 ps-5" id="inputName" placeholder="Soyadınız">
                                            </div>
                                        </div>

                                        <div class="col-12 ">
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-person-circle"></i></div>
                                                <input type="text" asp-for="Username" class="form-control radius-30 ps-5" id="inputName" placeholder="Kullanıcı Adınız">
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-envelope-fill"></i></div>
                                                <input type="email" asp-for="Email" class="form-control radius-30 ps-5" id="inputEmailAddress" placeholder="Email Adresiniz">
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="ms-auto position-relative">
                                                <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-lock-fill"></i></div>
                                                <input type="password" asp-for="Password" class="form-control radius-30 ps-5" id="inputChoosePassword" placeholder="Şifreniz">
                                                <div class="position-absolute top-50 end-0 translate-middle-y px-3" style="cursor: pointer;" id="togglePassword">
                                                    <i class="bi bi-eye-slash" id="eyeIcon"></i>
                                                </div>
                                            </div>
                                        </div>


                                        <div class="col-12">
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked">
                                                <label class="form-check-label" for="flexSwitchCheckChecked">Kullanım Şartlarını Okudum & Kabul Ediyorum</label>
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <div class="d-grid">
                                                <button type="submit" id="btnRegister" class="btn btn-warning radius-30" disabled>Kayıt Ol</button>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <p class="mb-0">Zaten bir hesabın var mı? <a href="authentication-signin.html">Giriş Yap</a></p>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <!--end page main-->

    </div>
    <!--end wrapper-->
    <!--plugins-->
    <script src="/snacked/ltr/assets/js/jquery.min.js"></script>
    <script src="/snacked/ltr/assets/js/pace.min.js"></script>

    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#inputChoosePassword');
        const eyeIcon = document.querySelector('#eyeIcon');
     


        togglePassword.addEventListener('click', function () {
            // Tipi değiştir (password -> text)
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);

            // İkonu değiştir (eye -> eye-slash)
            eyeIcon.classList.toggle('bi-eye');
            eyeIcon.classList.toggle('bi-eye-slash');
        });

        const checkbox = document.querySelector('#flexSwitchCheckChecked')
        const btnRegister = document.querySelector("#btnRegister");

        checkbox.addEventListener('change', function () {
            if (this.checked) {
                btnRegister.disabled = false;
            } else {
                btnRegister.checked = true;
            }
        });

    </script>


</body>

</html>